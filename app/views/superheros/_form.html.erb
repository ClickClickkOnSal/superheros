<% if @superhero.errors.any? %>
  <ul class='errors'>
    <% @superhero.errors.full_messages.each do |err| %>
      <li><%= err %> </li>
      <% end %>
  </ul>
<% end %>

<%= form_for @superhero do |hero| %>
  <%= hero.label :name %>
  <%= hero.text_field :name %><br />

  <%= hero.label :cape, "Has cape?" %>
  <%= hero.label :cape, "Yes", :value => "true"  %>
  <%= hero.radio_button :cape, true %>
  <%= hero.label :cape, "No", :value => "false" %>
  <%= hero.radio_button :cape, false, :checked => true %><br />

  <%= hero.label :super_power %>
  <%= hero.text_area :super_power %><br />

  <%= hero.label :image %>
  <%= hero.text_area :image %><br />
  <%= hero.submit "Submit", :class => "submit" %><br />
  <%= link_to "Back", superheros_path %>
<% end %>

